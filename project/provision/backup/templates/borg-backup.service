[Unit]
Description=Borg Backup

[Service]
Type=oneshot
Environment="BORG_UNKNOWN_UNENCRYPTED_REPO_ACCESS_IS_OK=yes"
Environment=REPO=borg@192.168.255.100:/var/backup/web/
Environment=BACKUP_TARGET=/var/www/html/my.web.app/

ExecStart=/bin/borg create --stats ${REPO}::web-{now:%%Y-%%m-%%d_%%H:%%M:%%S} ${BACKUP_TARGET}

ExecStart=/bin/borg check ${REPO}

ExecStart=/bin/borg prune --keep-hourly 5 ${REPO}